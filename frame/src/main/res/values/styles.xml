<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <declare-styleable name="ImgListView">
        <attr name="headimage" format="reference|color" />
        <attr name="bottomMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TitleView">
        <attr name="layoutId" format="reference" />
        <attr name="titleId" format="reference" />
        <attr name="lTextViewId" format="reference" />
        <attr name="rTextViewId" format="reference" />
        <attr name="lImageButtonId" format="reference" />
        <attr name="rImageButtonId" format="reference" />
        <attr name="lImageId" format="reference" />
        <attr name="rImageId" format="reference" />
        <attr name="lTextId" format="reference|string" />
        <attr name="rTextId" format="reference|string" />
        <attr name="titleTextId" format="reference|string" />
    </declare-styleable>
</resources>
